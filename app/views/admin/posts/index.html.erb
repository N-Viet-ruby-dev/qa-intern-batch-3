<button type="button" class="btn btn-primary custom-new-post" data-toggle="modal" data-target="#exampleModalCenter">
  New Topic
</button>
<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
      </div>
      <div class="modal-body">
        <%= form_for [:admin, @post], remote: true do |f| %>
        <div id="errors-post"></div>
        <%= f.text_field :title, class: "form-control" %> <br>
        <div class="row">
          <div class="col-6">
            <%= select("post", "category_id", Category.all.collect {|p| [p.name, p.id] }, { include_blank: false }, class: "form-control")%>
          </div>
          <div class="col-6">
            <%= select_tag :tag, options_for_select(@tags), {class: "form-control admin-select", multiple: true} %>
          </div>
        </div>
        <%= f.cktext_area :content, cols: 40, ckeditor: { toolbar: 'mini' } %>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          <%= f.button "Save changes", class: "btn btn-primary", remote: true %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<table id="container_posts" class="table table-striped table-bordered text-center">
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>Comments</th>
      <th>Status</th>
      <th>Actived</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <%= render @posts %>
  </tbody>
</table>
